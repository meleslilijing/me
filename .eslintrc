{
  "parser"  : "babel-eslint",
  "extends" : "eslint-config-airbnb",
  "plugins" : [
    "flow-vars",
    "react",
    "import"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "no-console": 1,
    "no-alert": 1,
    "jsx-quotes": 0,
    "no-trailing-spaces": 0
  }
}
